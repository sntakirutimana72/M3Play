<Layouts>:
    canvas.before:
        Color:
            rgba: self.background_color
        Rectangle:
            pos: self.pos
            size: self.size
        Color:
            rgba: self.left_border_color
        SmoothLine:
            width: self.border_width
            points: [*self.pos, self.x, self.top]
        Color:
            rgba: self.right_border_color
        SmoothLine:
            width: self.border_width
            points: [self.right, self.y, self.right, self.top]
        Color:
            rgba: self.down_border_color
        SmoothLine:
            width: self.border_width
            points: [*self.pos, self.right, self.y]
        Color:
            rgba: self.top_border_color
        SmoothLine:
            width: self.border_width
            points: [self.x, self.top, self.right, self.top]


<ScrollableLabelComponent>:
    Label:
        bold: True
        text: root.text
        valign: 'middle'
        color: root.color
        size_hint_x: None
        text_size: None, self.height
        size: self.texture_size
        font_size: dp(min(*self.size) // 2 - 1)
        on_texture_size: root._on_texture_update(*args)