<Layouts>:
    canvas.before:
        Color:
            rgba: self.background_color
        Rectangle:
            pos: self.pos
            size: self.size


<ScrollableLabel>:
    bold: True
    valign: 'middle'
    size_hint_x: None
    text_size: None, self.height
    size: self.texture_size
    font_size: dp(min(*self.size) // 2 - 1)